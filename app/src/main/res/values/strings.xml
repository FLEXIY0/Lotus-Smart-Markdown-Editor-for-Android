    <string name="help_create_note_title">Create Note</string>
    <string name="help_create_note_description">Press the \'+\' button in the bottom right corner to create a new note. The note title is automatically generated from the first line of text using #.</string>
    <string name="help_delete_note_title">Delete Note</string>
    <string name="help_delete_note_description">Swipe a note to the right in the list to delete it. Deleted notes are moved to the trash where they are stored according to the selected retention period.</string>
    <string name="help_pin_note_title">Pin Note</string>
    <string name="help_pin_note_description">Swipe a note to the left in the list to pin it. Pinned notes are displayed in a separate section at the top of the list and can be reordered.</string>
    <string name="help_preview_mode_title">Preview Mode</string>
    <string name="help_preview_mode_description">Use the quick edit panel to switch between edit and preview modes. In preview mode, you can see formatted text and mark tasks as completed.</string>
    <string name="help_quick_delete_title">Quick Delete</string>
    <string name="help_quick_delete_description">Click the \'X\' button in the top panel to delete the current note and create a new one. The deleted note will be moved to the trash.</string>
    
    <string name="help_headers_title">Headers</string>
    <string name="help_headers_description">Use \'#\' for different header levels (1 to 6 \'#\')</string>
    <string name="help_task_lists_title">Task Lists</string>
    <string name="help_task_lists_description">Create interactive task lists. In preview mode, you can mark tasks as completed.</string>
    <string name="help_bullet_lists_title">Bullet Lists</string>
    <string name="help_bullet_lists_description">Create bullet lists using \'-\', \'+\' or \'*\' at the start of a line</string>
    <string name="help_numbered_lists_title">Numbered Lists</string>
    <string name="help_numbered_lists_description">Create numbered lists using numbers with a dot</string>
    <string name="help_text_formatting_title">Text Formatting</string>
    <string name="help_text_formatting_description">Use \'*\' or \'_\' for italics, \'**\' or \'__\' for bold text</string>
    <string name="help_quotes_title">Quotes</string>
    <string name="help_quotes_description">Use \'>\' at the start of a line to create quotes</string>
    <string name="help_tables_title">Tables</string>
    <string name="help_tables_description">Create tables using vertical lines and hyphens</string>
    <string name="help_links_title">Links and Images</string>
    <string name="help_links_description">Insert links and images using special syntax</string>
    <string name="help_html_title">HTML Markup</string>
    <string name="help_html_description">Basic HTML markup is supported for additional formatting</string>
    
    <string name="help_notifications_title">Notifications</string>
    <string name="help_notifications_description">Create reminders for notes with various repeat intervals: daily, weekly, monthly, yearly, or on specific days of the week. Notifications can be enabled and disabled, and their parameters can be edited.</string>
    <string name="help_timestamps_title">Timestamps</string>
    <string name="help_timestamps_description">When creating and editing notes, you can add timestamps that create a date and time mark in the note text.</string>
    <string name="help_voice_input_title">Voice Input</string>
    <string name="help_voice_input_description">Use the microphone button for voice text input. Press the button again to stop recording.</string>
    <string name="help_font_size_title">Font Size</string>
    <string name="help_font_size_description">Adjust the font size using the slider in the app\'s top panel.</string>
    <string name="help_trash_title">Trash</string>
    <string name="help_trash_description">Deleted notes are moved to the trash. The retention period can be set from 1 week to infinity. Notes can be restored or permanently deleted.</string>
    <string name="help_version_history_title">Version History</string>
    <string name="help_version_history_description">Note versions are automatically saved when significant changes are made. Previous versions can be viewed and restored.</string>
    
    <string name="help_ai_processing_title">AI Text Processing</string>
    <string name="help_ai_processing_description">Text post-processing feature using AI is under development. Will be available in the future for improving note formatting and structure.</string>
    <string name="help_file_management_title">File Management</string>
    <string name="help_file_management_description">Note export and import functions, as well as synchronization, are under development.</string>
